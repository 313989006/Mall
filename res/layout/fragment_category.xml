<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/category_et_find"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp" 
        android:hint="@string/find_et_hint"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" 
        android:baselineAligned="false">

        <fragment
            android:id="@+id/category_left_fragment"
            android:name="com.wiipu.mall.fragment.CategoryLeftFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <fragment
            android:id="@+id/category_right_fragment"
            android:name="com.wiipu.mall.fragment.CategoryRightFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3" />
    </LinearLayout>

</LinearLayout>